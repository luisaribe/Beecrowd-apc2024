#include <stdio.h>

int main() {

int a, b, c, d, e, f, t;

  scanf ("%d %d %d\n", &a, &b, &c);
  scanf ("%d %d %d", &d, &e, &f);

  if (d > a && e> b && f> c){
    t = (d - a)+(e-b)+(f-c);
    printf("%d\n", t);
  }else{   
  if (d > a && e > b){
    t = (d-a) + (e-b);
    printf ("%d\n", t);
  }else{
    if (d > a && f > c){
      t = (d - a) + (f - c);
      printf ("%d\n", t);
    }else{
      if (e > b && f > c){
        t = (e - b) + (f - c);
        printf ("%d\n", t);
      }else{
        if (d > a){
          printf ("%d\n", d-a);
        }else{
          if(e > b){
            printf("%d\n", e-b);
          }else{
            if (f > c){
              printf ("%d\n", f-c);
            }else{
              printf ("0\n");
            }
          }
        }
      }
    }
  }}

return 0;
}
