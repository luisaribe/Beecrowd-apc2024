#include <stdio.h>

 int main() {

    int litros, valor, n, m, p;

    scanf("%d", &litros);

    if (litros <= 10){
       valor = 7;
    }else{
       if (litros <= 30){
          n = litros - 10;
          valor = 7 + n;
       }else{
          if (litros <= 100){ 
             m = litros -10 -20;
             valor = 7 + 20 + 2*m;
          }else{
             p = litros - 10 - 20 -70;
             valor = 7 + 20 + 140 + 5*p;
          }
       }
    }

    printf("%d\n", valor);
   
return 0;

}
